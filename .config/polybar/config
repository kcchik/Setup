[bar/bar]
monitor = ${env:MONITOR:}
background = #00000000
foreground = #333
font-0 = undefined
border-top-size = 10
border-bottom-size = 0
border-right-size = 15
border-left-size = 15
modules-left = alsa battery
modules-right = date time
module-margin = 1

[module/date]
type = internal/date
interval = 5
date = %m/%d/%y
label = %date%

[module/time]
type = internal/date
interval = 5
time = %I:%M
label = %time%

[module/battery]
type = internal/battery
battery = BAT0
poll-interval = 5
label-discharging = %percentage%%
label-charging = %percentage%%
label-full = %percentage%%
format-discharging = bat <label-discharging>
format-full = bat <label-full>
format-charging = bat <label-charging>

[module/alsa]
type = internal/alsa
interval = 5
format-volume = <label-volume>
label-volume = vol %percentage%%
label-muted = muted

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5
label-connected = %essid%
label-disconnected = No Connection
