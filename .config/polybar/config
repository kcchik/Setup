[bar/bar]
monitor = ${env:MONITOR:}
background = #00000000
foreground = #333
font-0 = undefined
border-top-size = 10
border-right-size = 35
border-left-size = 35
modules-right = pulseaudio wlan date time
module-margin = 1

[module/date]
type = internal/date
interval = 5
date = %m.%d.%y
label = %date%

[module/time]
type = internal/date
interval = 5
time = %I:%M
label = %time%

[module/battery]
type = internal/battery
battery = BAT0
poll-interval = 5
label-discharging = %percentage%%
label-charging = %percentage%%
label-full = %percentage%%
format-discharging = bat <label-discharging>
format-full = bat <label-full>
format-charging = bat <label-charging>

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume> <bar-volume>
label-volume = Vol
label-muted = Muted
bar-volume-width = 9
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-fill = -
bar-volume-empty = -
bar-volume-empty-foreground = #bbb


[module/alsa]
type = internal/alsa
interval = 5
format-volume = <label-volume>
label-volume = vol %percentage%%
label-muted = muted

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5
label-connected = %essid%
label-disconnected = No Connection
